rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Homework submissions - authenticated users can upload to their own folder
    match /submissions/{userId}/{allPaths=**} {
      // Users can read/write their own submissions
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admins can read all submissions (you'd need to check custom claims for proper admin check)
      allow read: if request.auth != null;
    }
    
    // Lesson resources - admins can write, all authenticated users can read
    match /resources/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // In production, add admin check
    }
  }
}
